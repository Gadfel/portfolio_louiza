{% extends 'base.html.twig' %}

{% block title %}accueil{% endblock %}

{% block body %}
<header id="home-header">
    <div id="header-img"></div>
    <h1>Louiza GADFEL </h1>
    <h2>Dévloppeur Web et Mobile</h2>
</header>
<div class="row">
    <div class="col-12">
        <h2>projets</h2>
    </div>
</div>

<div class="row">
    {% for  in maisons %}
        {# {% if loop.index <= 6 %} #}
            <div class="col-4 p-3">
                <div class="card">
                    <img src="{{ asset('img/' ~ header.jepeg) }}" class="card-img-top" alt="photo principale {{ laptop.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ laptop.title }}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> : {{ maison.surface }} m<sup>2</sup></li>
                        <li class="list-group-item">Pièces : {{ maison.rooms }} dont {{ maison.bedrooms }} chambre(s)</li>
                        <li class="list-group-item">Prix : {{ maison.price|number_format(0, ',', ' ') }} €</li>
                    </ul>
                    <div class="card-body text-center">
                        <a href="#" class="btn btn-outline-secondary">Voir plus</a>
                    </div>
                </div>
            </div>
        {# {% endif %} #}
    {% endfor %}
</div>

<div class="row">
    <div class="col-12 text-center">
        <a href="{{ path('maison_index') }}" class="btn btn-secondary">Voir tout</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2>Notre équipe</h2>
    </div>
</div>

<div class="row">
    <ul>
        {% for commercial in commerciaux %}
            <li>{{ commercial.name }}</li>
        {% endfor %}
    </ul>
</div>

</main>

{% endblock %}





