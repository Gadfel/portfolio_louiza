{% extends 'base.html.twig' %}

{% block title %} Contact{% endblock %}

{% block body %}

<header >
    <h1 class="bg-light text-center p-5">CONTACT</h1> 
    <h2 class="bg-light text-center p-5">Formulaire de contact</h2>
</header>
<main class="container-fluid ">

    <div class="row">
        <div class="col-8 offset-2">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }} bg-{{ label }} text-light p-3 my-5 rounded">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    {{ form_start(contactForm)}}

        <div class="row my-6">
            <div class="col-6 offset-3 mb-3">
                {{ form_row(contactForm.nom)}}
            </div>

            <div class="col-6 offset-3 mb-3">
                {{ form_row(contactForm.prenom)}}
            </div>

            <div class="col-6 offset-3 mb-3">
                {{ form_row(contactForm.email)}}
            </div>

            <div class="col-6 offset-3 mb-3 ">
                {{ form_row(contactForm.message)}}
            </div>

            <div class="col-6 offset-4 text-end">
                <input type="submit" class="btn btn-primary" value="Envoyer">
            </div>
            
        </div>
  
    {{ form_end(contactForm) }}

</main>




{% endblock %}
